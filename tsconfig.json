{
	"compilerOptions": {
		"module": "es2020",
		"target": "es2020",
		"outDir": "dist",
		"rootDir": "src",
		"baseUrl": "src",
		"moduleResolution": "bundler",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"lib": [
			"DOM",
			"DOM.Iterable",
			"ES2020"
		],
		"paths": {
			"@fs/*": [
				"fs/*",
			],
			"@commands/*": [
				"commands/*"
			],
			"@client/*": [
				"client/*"
			]
		},
		"sourceMap": true,
		"strict": true,
		"incremental": true,
		"noErrorTruncation": true,
		"plugins": [
			{
				"name": "@0no-co/graphqlsp",
				"schema": "./schema.graphql"
			}
		]
	},
	"include": [
		"src/**/*.ts",
		"./node_modules/vscode/vscode.d.ts",
		"./node_modules/vscode/lib/*",
	]
}